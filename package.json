{
  "name": "test_system",
  "version": "1.0.0",
  "description": "A NodeJs Express API with 4 Restful endpoints based on top of a mongoDb",
  "main": "app/index.js",
  "author": "Ronni H. Baslund",
  "license": "MIT",
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 95,
    "statements": 95,
    "functions": 95,
    "branches": 95,
    "include": [
      "app/**/*.js"
    ],
    "exclude": [
      "test/**/*.spec.js",
      "app/server.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "require": [
      "babel-register"
    ],
    "cache": true,
    "all": true
  },
  "scripts": {
    "start": "nodemon app/index.js --exec babel-node --presets es2015,stage-2",
    "dev": "nodemon app/index.js --exec babel-node --presets es2015,stage-2",
    "babel-build": "babel app -d dist",
    "serve": "node build/backend.js",
    "unit": "nyc mocha",
    "build": "export NODE_ENV=production || SET NODE_ENV=production && webpack",
    "seed": "export NODE_ENV=development || SET NODE_ENV=development && babel-node seed.js --presets es2015,stage-2"
  },
  "dependencies": {
    "bcrypt": "3.0.4",
    "body-parser": "1.18.3",
    "debug": "4.1.1",
    "express": "4.16.4",
    "jsonwebtoken": "8.4.0",
    "mongodb": "3.1.13",
    "mongoose": "5.4.13",
    "morgan": "1.9.1"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-cli": "^6.26.0",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "eslint": "^4.17.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.0.0",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0",
    "source-map-support": "^0.5.3",
    "webpack": "^3.10.0"
  }
}
